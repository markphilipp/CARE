{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Watch",
            "type": "shell",
            "command": "npm run watch",
            "group": "build",
            "problemMatcher": [
                "$lessc"
            ]
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "npm run build",
            "group": "build",
            "problemMatcher": [
                "$lessc",
                "$tsc",
                "$tsc-watch",
                "$lessCompile"
            ]
        }
    ]
}